.audio
  audio(src='./Duyen Am - Hoang Thuy Linh.mp3')
.music-box
  .action-button
    button.btn.btn-audio.backward
      i.fa.fa-backward(aria-hidden='true')
    button.btn.btn-audio.play-pause
      i.fa.fa-play(aria-hidden='true')
      i.fa.fa-pause(aria-hidden='true')
    button.btn.btn-audio.forward
      i.fa.fa-forward(aria-hidden='true')
    .progress-status
      #music-progress.progress
        #music-progress-bar.progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0')
      .capacity
        .start 00:00
        .end 00:00
    .volume-bar
      button.btn.btn-audio.volume
        i.fa.fa-volume-up(aria-hidden='true')
        i.fa.fa-volume-down(aria-hidden='true')
        i.fa.fa-volume-off(aria-hidden='true')
      .volume-bar-status.not-display
        // <i class="fa fa-volume-down" aria-hidden="true"></i>
        i.fa.fa-volume-off(aria-hidden='true')
        input#volume-bar(type='range', name='volume-bar', min='0', max='100', value='100')
        i.fa.fa-volume-up(aria-hidden='true')
    button.btn.btn-audio.speed 1x
    button.btn.btn-audio.repeat-time
      i.fa.fa-history
    button.btn.btn-audio.repeat
      i.fa.fa-undo
    a.btn.btn-audio.download(href='./Duyen Am - Hoang Thuy Linh.mp3', download='Duyen Am - Hoang Thuy Linh.mp3')
      i.fa.fa-download